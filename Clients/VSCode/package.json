{
	"name": "dws-vscode",
	"displayName": "dws-vscode",
	"description": "DWScript Language Server",
	"author": "Christian-W. Budde",
	"license": "GPL v3",
	"version": "0.1.0",
	"publisher": "cwbudde",
	"repository": {
		"type": "git",
		"url": "https://github.com/CWBudde/DWScript-Language-Server"
	},
	"engines": {
		"vscode": "^1.16.0"
	},
	"keywords": [
		"LSP",
		"compiler",
		"language",
		"dwscript"
	],
	"categories": [
		"Languages",
		"Snippets",
		"Linters",
		"Formatters",
		"Other"
	],
	"icon": "icon/128x128.png",
	"bugs": {
		"url": "https://github.com/CWBudde/DWScript-Language-Server/issues"
	},
	"activationEvents": [
		"onLanguage:dwscript"
	],
	"main": "src/dwsls",
	"contributes": {
		"languages": [
			{
				"id": "dwscript",
				"aliases": [
					"Delphi Web Script",
					"DWS"
				],
				"extensions": [
					".dws"
				],
				"configuration": "./dwscript-configuration.json"
			}
		],
		"grammars": [
			{
				"language": "dwscript",
				"scopeName": "source.dwscript",
				"path": "./syntaxes/dwscript.tmLanguage.json"
			}
		],
		"snippets": [
			{
				"language": "dwscript",
				"path": "./snippets/dwscript.json"
			}
		],
		"configuration": {
			"type": "object",
			"title": "DWScript configuration",
			"properties": {
				"dwsls.path": {
					"type": "string",
					"default": "dwsls",
					"description": "The path to dwsls executable"
				},
				"dwsls.trace.server": {
					"type": "string",
					"enum": [
						"off",
						"messages",
						"verbose"
					],
					"default": "off",
					"description": "Traces the communication between VSCode and the DWScript Language Server service."
				}
			}
		}
	},
	"bin": {
		"dwsls": "./bin/dwsls.exe"
	},
	"dependencies": {
		"vscode": "^1.1.5",
		"vscode-languageclient": "^3.4.2",
		"vscode-languageserver": "^3.4.2"
	}
}